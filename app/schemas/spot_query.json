{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Condition": {
      "type": "object",
      "properties": {
        "key": { "type": "string" },
        "value": { "type": "string" },
        "operator": {
          "type": "string",
          "enum": ["=", "<", ">", "~"]
        },
        "name": { "type": "string" }
      },
      "required": ["key", "value", "operator"]
    },
    "NestedCondition": {
      "oneOf": [
        {
          "$ref": "#/definitions/Condition"
        },
        {
          "type": "object",
          "properties": {
            "and": {
              "type": "array",
              "items": { "$ref": "#/definitions/NestedCondition" }
            },
            "or": {
              "type": "array",
              "items": { "$ref": "#/definitions/NestedCondition" }
            }
          },
          "oneOf": [{ "required": ["and"] }, { "required": ["or"] }]
        }
      ]
    },
    "Cluster": {
      "type": "object",
      "properties": {
        "id": { "type": "number" },
        "filters": {
          "type": "array",
          "items": { "$ref": "#/definitions/Condition" }
        },
        "type": { "type": "string", "const": "cluster" },
        "minPoints": { "type": "number" },
        "maxDistance": { "type": "string" }
      },
      "required": ["id", "filters", "type", "minPoints", "maxDistance"]
    },
    "NWR": {
      "type": "object",
      "properties": {
        "id": { "type": "number" },
        "name": { "type": "string" },
        "filters": {
          "type": "array",
          "items": { "$ref": "#/definitions/NestedCondition" }
        },
        "type": { "type": "string", "const": "nwr" }
      },
      "required": ["id", "name", "filters", "type"]
    }
  },
  "type": "object",
  "properties": {
    "area": {
      "type": "object",
      "properties": {
        "type": { "type": "string", "enum": ["bbox", "area"] },
        "value": { "type": "string" },
        "geometry": { "type": "object" },
        "bbox": {
          "type": "array",
          "items": {
            "type": "number"
          }
        }
      },
      "required": ["type"]
    },
    "nodes": {
      "type": "array",
      "items": {
        "oneOf": [
          { "$ref": "#/definitions/Cluster" },
          { "$ref": "#/definitions/NWR" }
        ]
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "source": { "type": "number" },
              "target": { "type": "number" },
              "type": { "type": "string", "const": "distance" },
              "value": { "type": "string" }
            },
            "required": ["source", "target", "type", "value"]
          },
          {
            "type": "object",
            "properties": {
              "source": { "type": "number" },
              "target": { "type": "number" },
              "type": { "type": "string", "const": "contains" }
            },
            "required": ["source", "target", "type"]
          }
        ]
      }
    }
  },
  "required": ["area", "nodes"]
}
