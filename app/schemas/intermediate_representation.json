{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Condition": {
      "type": "object",
      "properties": {
        "k": { "type": "string" },
        "v": { "type": "string" },
        "op": {
          "type": "string",
          "enum": ["=", "<", ">", "~"]
        },
        "n": { "type": "string" }
      },
      "required": ["k", "v", "op"]
    },
    "NestedCondition": {
      "oneOf": [
        {
          "$ref": "#/definitions/Condition"
        },
        {
          "type": "object",
          "properties": {
            "and": {
              "type": "array",
              "items": { "$ref": "#/definitions/NestedCondition" }
            },
            "or": {
              "type": "array",
              "items": { "$ref": "#/definitions/NestedCondition" }
            }
          },
          "oneOf": [{ "required": ["and"] }, { "required": ["or"] }]
        }
      ]
    },
    "Cluster": {
      "type": "object",
      "properties": {
        "id": { "type": "number" },
        "flts": {
          "type": "array",
          "items": { "$ref": "#/definitions/Condition" }
        },
        "t": { "type": "string", "enum": ["cluster"] },
        "minPts": { "type": "number" },
        "maxDist": { "type": "string" }
      },
      "required": ["id", "flts", "t", "minPts", "maxDist"]
    },
    "NWR": {
      "type": "object",
      "properties": {
        "id": { "type": "number" },
        "n": { "type": "string" },
        "flts": {
          "type": "array",
          "items": { "$ref": "#/definitions/NestedCondition" }
        },
        "t": { "type": "string", "const": "nwr" }
      },
      "required": ["id", "n", "flts", "t"]
    }
  },
  "type": "object",
  "properties": {
    "a": {
      "type": "object",
      "properties": {
        "t": { "type": "string", "enum": ["bbox", "polygon", "area"] },
        "v": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "type": "number"
              }
            },
            {
              "type": "array",
              "items": {
                "type": "array",
                "items": {
                  "type": "array",
                  "items": {
                    "type": "number"
                  }
                }
              }
            },
            {
              "type": "string"
            }
          ]
        }
      },
      "required": ["t", "v"]
    },
    "ns": {
      "type": "array",
      "items": {
        "oneOf": [
          { "$ref": "#/definitions/Cluster" },
          { "$ref": "#/definitions/NWR" }
        ]
      }
    },
    "es": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "src": { "type": "number" },
              "tgt": { "type": "number" },
              "t": { "type": "string", "const": "dist" },
              "dist": { "type": "string" }
            },
            "required": ["src", "tgt", "t", "dist"]
          },
          {
            "type": "object",
            "properties": {
              "src": { "type": "number" },
              "tgt": { "type": "number" },
              "t": { "type": "string", "const": "cnt" }
            },
            "required": ["src", "tgt", "t"]
          }
        ]
      }
    }
  },
  "required": ["a", "ns"]
}
